<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.BesinDetayiFragment"
    >

        <ImageView
            android:id="@+id/detayResmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:minHeight="200dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_launcher_background"
            android:layout_margin="10dp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detayAdi"
            android:layout_below="@+id/detayResmi"
            android:text="Detay İsim"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detayKalori"
            android:layout_below="@+id/detayAdi"
            android:text="Detay Kalori"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detayKarbonhidrat"
            android:layout_below="@+id/detayKalori"
            android:text="Detay Karbonhidrat"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detayProtein"
            android:layout_below="@+id/detayKarbonhidrat"
            android:text="Detay Protein"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detayYag"
            android:layout_below="@+id/detayProtein"
            android:text="Detay Yağ"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"
            ></TextView>



</RelativeLayout>

</layout>